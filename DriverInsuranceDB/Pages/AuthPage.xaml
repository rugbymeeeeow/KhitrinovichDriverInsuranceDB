<Page x:Class="DriverInsuranceDB.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DriverInsuranceDB.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="123*"></ColumnDefinition>
            <ColumnDefinition Width="252*"></ColumnDefinition>
            <ColumnDefinition Width="125*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="277*"></RowDefinition>
            <RowDefinition Height="90*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="2" Grid.Column="1" Content="Логин" Margin="0,0,267,157" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="47"/>
        <Label Grid.Row="2" Grid.Column="1" Content="Пароль" Margin="0,0,264,111" Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="53"/>
        <TextBox ToolTip="Введите логин" x:Name="TextBoxLogin" Grid.Row="2" Grid.Column="1" Margin="0,0,78,152" RenderTransformOrigin="0.5,0.5" Height="41" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="184" TextChanged="TextBoxLogin_TextChanged"/>
        <TextBlock Text="Логин или почта" Foreground="Gray" Name="txtHintLogin" Margin="0,0,163,163" VerticalAlignment="Bottom" Width="96" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" Height="16"/>
        <PasswordBox Password="пароль" ToolTip="Введите пароль" x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="0,0,78,107" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Right" Width="184" Height="34" VerticalAlignment="Bottom"></PasswordBox>


        <Button ToolTip="Кнопка входа" Content="Вход" Margin="0,0,204,29" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Width="113" Height="49" VerticalAlignment="Bottom" Name="EnterButton" Click="EnterButtonClick"/>
        <Button ToolTip="Кнопка регистрации" Content="Регистрация" Margin="0,0,57,29" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Width="113" Height="49" VerticalAlignment="Bottom" Name="RegButton" Click="RegButtonClick"/>
    </Grid>
</Page>
